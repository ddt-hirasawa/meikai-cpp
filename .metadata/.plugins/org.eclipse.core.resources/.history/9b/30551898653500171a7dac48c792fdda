#include<string>
#include"class.h"

//コンストラクタ
HumaN::HumaN(std::string name_,float weight_ ,float height_,int year_me,int month_me,int day_me)
	: open(0)
{
	name = name_;			//クラスオブジェクトで初期化された値を
	weight = weight_;		//それぞれのデータメンバに代入します
	height = height_;		//

	open = Date(year_me,month_me,day_me);
}

void HumaN::gain(float diff)
{
	weight += diff;			//main から増えた分の体重を反映させます
}

void HumaN::lose(float diff)
{
	weight -= diff;			//main から痩せた分の体重を反映させます
}
