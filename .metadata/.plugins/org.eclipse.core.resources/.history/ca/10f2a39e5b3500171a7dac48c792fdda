#include<iostream>
#include"class.h"

using namespace std;

int Date::dswitch(int serect) const
{
	int obj;
	switch(serect){
	case 1:
		do{
		cout << "日 : ";
		cin >> obj;
		if(obj > LASTM1 || obj < 1)
			cout << "やり直し(1 ～" << LASTM1 <<"日まで)";
		}while(obj < 1 || obj > LASTM1); break;
	case 2:
		do{
		cout << "日 : ";
		cin >> obj;
		if(obj > LASTM2 || obj < 1)
			cout << "やり直し(1 ～" << LASTM2 <<"日まで)";
		}while(obj < 1 || obj > LASTM2); break;
	case 3:
		do{
		cout << "日 : ";
		cin >> obj;
		if(obj > LASTM3 || obj < 1)
			cout << "やり直し(1 ～" << LASTM3 <<"日まで)";
		}while(obj < 1 || obj > LASTM3); break;
	case 4:
		do{
		cout << "日 : ";
		cin >> obj;
		if(obj > LASTM4 || obj < 1)
			cout << "やり直し(1 ～" << LASTM4 <<"日まで)";
		}while(obj < 1 || obj > LASTM4); break;
	case 5:
		do{
		cout << "日 : ";
		cin >> obj;
		if(obj > LASTM5 || obj < 1)
			cout << "やり直し(1 ～" << LASTM5 <<"日まで)";
		}while(obj < 1 || obj > LASTM5); break;
	case 6:
		do{
		cout << "日 : ";
		cin >> obj;
		if(obj > LASTM6 || obj < 1)
			cout << "やり直し(1 ～" << LASTM6 <<"日まで)";
		}while(obj < 1 || obj > LASTM6); break;
	case 7:
		do{
		cout << "日 : ";
		cin >> obj;
		if(obj > LASTM7 || obj < 1)
			cout << "やり直し(1 ～" << LASTM7 <<"日まで)";
		}while(obj < 1 || obj > LASTM7); break;
	case 8:
		do{
		cout << "日 : ";
		cin >> obj;
		if(obj > LASTM8 || obj < 1)
			cout << "やり直し(1 ～" << LASTM8 <<"日まで)";
		}while(obj < 1 || obj > LASTM8); break;
	case 9:
		do{
		cout << "日 : ";
		cin >> obj;
		if(obj > LASTM9 || obj < 1)
