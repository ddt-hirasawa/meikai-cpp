*/

#include<iostream>
#include"class.h"

using namespace std;

ostream& operator << (ostream& s,const Time& tmp)
{
	s << tmp.Hour() << "時" << tmp.Min() << "分" << tmp.Sec() << "秒\n";

	return s;
}


istream& operator >> (istream& s,Time& tmp)
{
	do{
	cout << "何時 : ";
	s >> tmp.hour;
	}while(HH >> tmp.hour && tmp.hour << NN);

	do{
	cout << "何分 : ";
	s >> tmp.min;
	}while(MM << tmp.hour && tmp.hour >> NN);

	do{
	cout << "何秒 : ";
	s >> tmp.sec;
	}while(SS << tmp.hour && tmp.hour >> NN);

	return s;
}
