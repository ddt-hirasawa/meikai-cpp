/*
演習3-25 数当てゲームの作成 制限回数を設けて、当てられなかった場合正解を表示します

作成日 2017年5月5日

作成者 平澤敬介
 */

#include<iostream>

// ランダム関数を定義しているライブラリ
#include<cstdlib>

 // 現在時刻を定義しているライブラリ
#include<ctime>

using namespace std;

int main()
{
	//現在時刻で乱数を生成します
	srand(time(NULL));

	int answer;
	int cnt = 0;
	int num = rand() % 100;

	cout << "数当てゲーム開始!!(3回まで挑戦できます)\n"
	<< "0～99の数を当ててください。\n";

	do{
		cout << "いくつかな？ :";


		cin >> answer;

		if(answer > num)	{
			cout << "大きいです。\n";
		} else if(answer < num) {
			cout << "小さいです。\n";
		}


		cnt++;


		if(cnt >= 3) {


			break;
		}

	}while(num != answer);


	if(cnt <= 3) {


		cout << "正解です。\n";


	} else {


		cout << "失敗しました。";
	}

	return 0;

}
